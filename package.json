    "url": "https://github.com/Pijus-dev/MERN-e-commerce/issues"
  },
  "homepage": "https://github.com/Pijus-dev/MERN-e-commerce#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.13",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.16",
    "nodemon": "^2.0.6",
    "stripe": "^8.121.0"
  }
}
